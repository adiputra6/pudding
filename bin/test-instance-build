#!/usr/bin/env bash

case "$1" in
  bogus)
    exec curl \
      -H 'Authorization: token swordfish' \
      -X POST \
      -s \
      -d "{\"instance_builds\": {}}" \
      http://localhost:${PORT:-42151}/instance-builds 
  ;;
  *)
    exec curl \
      -H 'Authorization: token swordfish' \
      -X POST \
      -s \
      -d "{
        \"instance_builds\": {
          \"site\": \"org\",
          \"env\": \"staging\",
          \"queue\": \"docker\",
          \"instance_type\": \"c3.4xlarge\"
        }
      }" \
      http://localhost:${PORT:-42151}/instance-builds
  ;;
esac
